<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="353dp"
        android:layout_height="536dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                style="Button.IconButton.Filledss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/button8"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#2196F3"
                tools:textColor="#2196F3" />

            <Button
                android:id="@+id/button9"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/buttonPlus"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#4CAF50" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/button5"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@color/design_default_color_error"
                android:textColorLink="#3F51B5"
                tools:textColor="#2196F3" />

            <Button
                android:id="@+id/button6"
                style="Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="#4CAF50" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/button2"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/pink"
                android:textColorHint="@android:color/holo_blue_dark"
                android:textColorLink="#2196F3"
                tools:textColor="#2196F3" />

            <Button
                android:id="@+id/button3"
                style="Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/buttonMinus"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#4CAF50" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonClear"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/button0"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:stateListAnimator="@android:anim/anticipate_overshoot_interpolator"
                android:text="0"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/buttonEqual"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:textColor="#4CAF50" />

            <Button
                android:id="@+id/buttonDivision"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#4CAF50" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="351dp"
        android:layout_height="54dp"
        android:layout_marginBottom="44dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868"
        tools:text="(23*45)/15" />
</androidx.constraintlayout.widget.ConstraintLayout>